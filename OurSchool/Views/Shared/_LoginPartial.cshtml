@using Microsoft.AspNet.Identity
@*if (Request.IsAuthenticated)*@
@if (Convert.ToInt32(Session["ID"]) > 0)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li>
        @Html.ActionLink("Hello " + @Session["UserName"].ToString() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    @*<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
    <li>@Html.ActionLink("Log off", "Index", "LogInLogOut", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Index", "UserRegistration", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Index", "LogInLogOut", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
